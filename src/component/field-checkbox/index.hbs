<div class='field field--checkbox'>
	<button class='field__wrapper validation' type='button' name='{{name}}'
		onclick="fieldCheckbox.toggle(this); {{action}}('{{name}}',this.hasAttribute('active'))">
		<span class='field__icon'></span>
		<span class='field__label field__label--checkbox'>{{label}}</span>
	</button>
</div>