{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <div class="head">
        <span class="time">
            9:41
        </span>
        <img src="/svg/group.svg" alt="group" class="img">
    </div>
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>
        <div class="form">
            <div class="form__item">
                {{> field action='recoveryConfirmForm.change' label='Код' type='number' placeholder='Ваш код'
                name="code"}}
                <span name="code" class="form__error">Error</span>
            </div>

            <div class="form__item">
                {{> field-password action='recoveryConfirmForm.change' placeholder='Введіть пароль' label='Новий пароль'
                name="password"}}
                <span name="password" class="form__error">Error</span>
            </div>

            <div class="form__item">
                {{> field-password action='recoveryConfirmForm.change' placeholder='Введіть пароль' label='Новий пароль
                ще раз'
                name="passwordAgain"}}
                <span name="passwordAgain" class="form__error">Error</span>
            </div>

        </div>
        <button onclick="recoveryConfirmForm.submit()" type="button" class="button button--disabled">Змінити
            пароль</button>
        <span class="alert--disabled alert">Увага, помилка</span>
    </form>
    <div style="height: 50px;"></div>
</div>

