{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <div class="head">
        <span class="time">
            9:41
        </span>
        <img src="/svg/group.svg" alt="group" class="img">
    </div>
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>
        <div class="form">
            <div class="form__item">
                {{> field action='signupForm.change' label='Ел. адреса' type='email' placeholder='Ваш e-mail'
                name="email"}}
                <span name="email" class="form__error">Error</span>
            </div>

            <div class="form__item">
                {{> field-password action='signupForm.change' placeholder='Введіть пароль' label='Пароль'
                name="password"}}
                <span name="password" class="form__error">Error</span>
            </div>

            <div class="form__item">
                {{> field-select action='signupForm.change' placeholder='Оберіть роль' label='Роль' list=data.role
                name="role"}}
                <span name="role" class="form__error">Error</span>
            </div>

            <div class="form__item">
                {{> field-checkbox action='signupForm.change' label='Ви погоджуєтеся з правилами сервіса'
                name="isConfirm"}}
                <span name="isConfirm" class="form__error">Error</span>
            </div>
        </div>
        <button onclick="signupForm.submit()" type="button" class="button">Зареєструватися</button>
        <span class="alert--error alert">Увага, помилка</span>
    </form>
    <div style="height: 50px;"></div>
</div>

